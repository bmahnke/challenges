---
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import headshot from '../../assets/headshot.jpg';

---

<Layout title="Social Media Challenge">
	<main class="flex flex-col space-y-4">
        <nav>
            <span>Navigation</span>
            <ul role="list" class="link-card-grid">
                <li><a href="/">Home</a>.</li>
            </ul>
        </nav>
		<h1 class="text-gray-950 dark:text-gray-300">Social Media Challenge</h1>
        <p>This challenge is present here: <a href="https://www.frontendmentor.io?ref=challenge" target="_blank">Social Links Profile</a></p>
        <div class="flex flex-col space-y-2 mx-auto p-8 bg-gray-200 dark:bg-gray-800 rounded-md">
            <Image src={headshot} alt="headshot" class="aspect-square h-24 w-24 rounded-full mx-auto" />
            <h2 class="text-2xl text-center">Brett Mahnke</h2>
            <span class="text-sm text-center uppercase text-emerald-600 dark:text-emerald-400">Georgia, USA</span>
            <span class="py-4 text-center italic">Experience full-stack developer</span>

            <div class="flex flex-col space-y-4 w-80">
                <button >Facebook</button>
                <button>Twitter / X</button>
                <button>LinkedIn</button>
                <button>GitHub</button>
            </div>
        </div>
	</main>
</Layout>

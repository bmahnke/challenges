---
import { parse } from 'node-html-parser';

export interface Props {
  icon: string;
  myAttributes?: {}
}

function getSVG(name: string) {
  const filepath = `/src/svg/${name}.svg`;
  const files = import.meta.glob<string>('/src/svg/**/*.svg', {
    eager: true,
    query: '?raw',
    import: 'default'
  });

  if (!(filepath in files)) {
    throw new Error(`${filepath} not found`);
  }

  const root = parse(files[filepath]);

  const svg = root.querySelector('svg');
  //@ts-ignore
  const { attributes, innerHTML } = svg;

  return {
    attributes,
    innerHTML,
  };
}

const { icon, myAttributes = {}, ...attributes } = Astro.props as Props;
const { attributes: baseAttributes, innerHTML } = getSVG(icon);

const svgAttributes = { ...baseAttributes, ...attributes, ...myAttributes };
---

<svg
  {...svgAttributes}
  set:html={innerHTML}
  alt={icon.split("/").join(" ")}
></svg>